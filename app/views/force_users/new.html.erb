<h1>Add New Force User</h1>

<%= form_tag '/force_users', method: :post do %>

  <div>
    <%= label_tag :title %>
    <%= text_field_tag :title %>
  </div>

  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>

  <div>
    <%= label_tag :affiliation %>
    <%= text_field_tag :affiliation %>
  </div>

  <div>
    <%= label_tag :location %>
    <%= text_field_tag :location %>
  </div>

  <div>
    <%= label_tag :lightsaber_color %>
    <%= text_field_tag :lightsaber_color %>
  </div>

  <div>
    <%= label_tag :dark_or_light %>
    <%= text_field_tag :dark_or_light %>
  </div>

  <%= submit_tag "Add Force User" %>
  
<% end %>